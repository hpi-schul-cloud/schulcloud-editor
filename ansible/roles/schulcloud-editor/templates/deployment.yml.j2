apiVersion: apps/v1
kind: Deployment
metadata:
  name: editor-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: editor
spec:
  replicas: {{ EDITOR_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: editor
  template:
    metadata:
      labels:
        app: editor
      annotations:
    spec:
      containers:
      - name: editor
        image: {{ EDITOR_IMAGE_NAME }}:{{ APP_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - name: editor
          containerPort: {{ EDITOR_PORT }}
          protocol: TCP
        envFrom:
        - configMapRef:
            name: editor-configmap
        - secretRef:
            name: editor-secret
        readinessProbe:
          httpGet:
            path: /
            port: 4101
          timeoutSeconds: 4
          failureThreshold: 3
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /
            port: 4101
          timeoutSeconds: 4
          failureThreshold: 3
          periodSeconds: 15
        startupProbe:
          httpGet:
            path: /
            port: 4101
          timeoutSeconds: 4
          failureThreshold: 36
          periodSeconds: 5
        resources:
          limits:
            cpu: "1000m"
            memory: "1Gi"
          requests:
            cpu: "100m"
            memory: "1Gi"
